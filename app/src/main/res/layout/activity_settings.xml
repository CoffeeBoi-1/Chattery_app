<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:id="@+id/main_layout"
    android:background="@color/textBlack">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:autoSizeTextType="uniform"
        android:breakStrategy="simple"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:text="@string/blacklist_dialog"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>
    <ProgressBar
        android:id="@+id/settings_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="15dp"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@id/disable_acc_btn"
        app:layout_constraintTop_toBottomOf="@id/textView">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/disable_acc_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="35dp"
        android:visibility="gone"
        android:background="@drawable/rounded_btn_style"
        android:fontFamily="@font/comfortaa_bold"
        android:padding="10dp"
        android:text="@string/disable_acc"
        android:textColor="@color/textBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>