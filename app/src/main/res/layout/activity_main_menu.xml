<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_menu"
    android:orientation="vertical"
    android:background="@drawable/backgroundpink">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_vk_logo"
            android:layout_gravity="center">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:padding="15dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/enter_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:digits="qwertzuiopasdfghjklyxcvbnmйцукенгшщзхъфывапролджэячсмитьбюёQWERTZUIOPASDFGHJKLYXCVBNMЙЦУКЕНГШЩЗХЪФЫВАПРОЛДЖЭЯЧСМИТЬБЮЁ"
            android:maxLength="10"
            android:background="@drawable/rounded_btn_style"
            android:layout_margin="10dp"
            android:hint="@string/enter_your_name"
            android:padding="10dp"
            android:fontFamily="@font/comfortaa_bold">
        </EditText>
        <Button
            android:id="@+id/host_game_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_btn_style"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/host_game"
            android:fontFamily="@font/comfortaa_bold">
        </Button>
        <Button
            android:id="@+id/join_game_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/join_game"
            android:background="@drawable/rounded_btn_style"
            android:layout_margin="10dp"
            android:fontFamily="@font/comfortaa_bold">
        </Button>
    </LinearLayout>
</LinearLayout>